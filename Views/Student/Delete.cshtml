@model StudentManagement.ViewModels.StudentDeleteViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var photoPath = "~/images/" + (Model.student.Photopath ?? "noimage.jpg");
}

<h2 class="text-danger">Delete Student</h2>

<div>
    <h3 class=" text-danger">Are you sure you want to delete this student?</h3>
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.student.Name</h1>
                </div>

                <div class="card-body text-center">
                    <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                    <h4>Student ID : @Model.student.Id</h4>
                    <h4>Email : @Model.student.Email</h4>
                    <h4>Class : @Model.student.Class</h4>
                    <h4>Gender : @Model.student.Gender</h4>

                </div>
                <div class="card-footer text-center">
                    <a asp-controller="student" asp-action="index" class="btn btn-primary">Back</a>
                    <form asp-controller="student" asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.student.Id" />
                        <span id="confirmDeleteSpan_@Model.student.Id" style="display:none">
                            <br />
                            <span>Are you sure you still want to delete?</span>
                            <br />
                            <button type="submit" class="btn btn-danger">Yes</button>
                            <a href="#" class="btn btn-primary"
                               onclick="confirmDelete('@Model.student.Id', false)">No</a>
                        </span>

                        <span id="deleteSpan_@Model.student.Id">
                            <a href="#" class="btn btn-danger"
                               onclick="confirmDelete('@Model.student.Id', true)">Delete</a>
                        </span>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}
